@model BlogCentral.Web.Models.DTO.TagRequest
@{

    ViewBag.Title = "Create New Tag";
}


<div class="container">


    <div>
        <a asp-controller="Tag" asp-action="Index" class="btn btn-outline-dark">Back to Tag List</a>
        <form asp-area="Admin" asp-controller="Tag" asp-action="Add">
            <div class="row mt-3 p-3 border ">
                <div class="row pb-2 mb-3">
                    <h2 class="text-info">Create a New Tag</h2>
                    <hr />
                </div>
                <div class="mb-4 row">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control rounded-3 text-info"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-4 row">
                    <label asp-for="DisplayName"></label>
                    <input asp-for="DisplayName" class="form-control rounded-3 text-info" />
                    <span asp-validation-for="DisplayName" class="text-danger"></span>
                </div>
                <div class="mb-4 row">
                    <button type="submit" class="btn btn-dark rounded-4" style="width:250px;">Submit</button>
                </div>
            </div>
        </form>
    </div>
    
</div>