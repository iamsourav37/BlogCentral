@model List<BlogCentral.Web.Models.DTO.TagResponse>
@{
    ViewBag.Title = "Admin Tag Page";
}


<div class="container bg-opacity-50">
    <div>
        <a asp-area="Admin" asp-controller="Tag" asp-action="Add" class="btn btn-outline-dark">
            <i class="bi bi-plus-circle"></i> Create New Tag
        </a>

        @if (Model.Count == 0)
        {
            <div class="mt-5">
                <h1>No Tag found !.</h1>
            </div>
        }
        else
        {
            <table class="table p-3 mt-1">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Display Name</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    @foreach (var tag in Model)
                    {
                        <tr>
                            <th>@tag.Id</th>
                            <td>@tag.Name</td>
                            <td>@tag.DisplayName</td>
                            <td><a asp-controller="Tag" asp-action="Edit" asp-route-tagId="@tag.Id" class="btn btn-outline-warning">Edit</a></td>
                            <td><a class="btn btn-outline-danger" asp-controller="Tag" asp-action="Delete" asp-route-tagId="@tag.Id">Delete</a></td>

                        </tr>
                    }
                </tbody>
            </table>

        }
    </div>

</div>

